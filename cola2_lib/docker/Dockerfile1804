# Run docker build in soundtiles root folder
# docker build -f docker/Dockerfile1804 -t iquarobotics/cola2:ubuntu_18.04 .
FROM ros:melodic 
LABEL maintainer="software@iquarobotics.com"

ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update --fix-missing
RUN apt-get install -q -y tzdata && rm -rf /var/lib/apt/lists/* && \
    apt-get update && \
    apt install -y libboost-thread-dev libboost-date-time-dev libboost-filesystem-dev libeigen3-dev libtinyxml-dev python python3 ros-melodic-rosbridge-server ros-melodic-joy lm-sensors lcov python-ruamel.yaml

CMD [ "/bin/systemd" 
