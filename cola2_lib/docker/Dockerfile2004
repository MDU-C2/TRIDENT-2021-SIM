# Run docker build in soundtiles root folder
# docker build -f docker/Dockerfile2004 -t iquarobotics/cola2:ubuntu_20.04 .
FROM ros:noetic 
LABEL maintainer="software@iquarobotics.com"

ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update --fix-missing
RUN apt-get install -q -y tzdata && rm -rf /var/lib/apt/lists/* && \
    apt-get update && \
    apt install -y git libboost-thread-dev libboost-date-time-dev libboost-filesystem-dev libeigen3-dev libtinyxml-dev python python3 ros-noetic-rosbridge-server ros-noetic-joy lm-sensors lcov python3-ruamel.yaml

CMD [ "/bin/systemd" 
